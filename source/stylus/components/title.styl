.title
  text-transform: uppercase
  text-align: center
  padding: s(100,50) 0
  font-size: s(50,16)
  font-weight: 100
  position: relative
  &:before
  &:after
    content: ""
    position: absolute
    border-top: s(2,50) solid $colorLightBlue
    width: s(150,50)
  &:before
    margin-left: s(-200,50)
    top: 50%
  &:after
    margin-left: s(50,50)
    top: 50%

/**MEDIA QUERIES**/

@media only screen and (max-width: 740px)
  .title
    &:before
    &:after
      hidden()

@media only screen and (max-width: 470px)
  .title
    font-size: s(35,16)
