.biographie
  max-width: 100%
  background-color: $backgroundColorInfoBooks
  color: $colorText
  line-height: 1.6
  &__figure
    overflow: hidden;
    border-radius: s(100,16)
    max-width: s(200,16)
    height: s(200,16)
    margin: 0 auto s(50,16)
  &__citation
    font-size: s(25,16)
    font-weight: 500
    text-align: center
    &:before
      icon( 'quotation-mark' )
      color: $colorLightBlue
      font-size: s(30,16)
      margin-right: s(20,46.876)
  &__text
    margin-top: s(50,16)
    padding-bottom: s(100,16)
    text-align: left
    font-weight: 100
